<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Amazon Automation Script " parallel="false">
    <!--<parameter name="useCloudEnv" value="false"/>
   <parameter name="cloudEnvName" value="browserstack"/>-->

    <parameter name="os" value="mac"/>
    <parameter name="os_version" value="10"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="62.0"/>
    <parameter name="url" value="http://www.Amazon.com"/>

    <test name = "Amazon Test">
        <classes>
            <class name="test.TestCookBook"/>
            <class name="test.TestDropDownMenu"/>
            <class name="test.TestHamburgerMenu"/>
            <class name="test.TestHomePage"/>
            <class name="test.TestLoginPage"/>
            <class name="test.TestLogo"/>
            <class name="test.TestOrderBar"/>
            <class name="test.TestSearchBox"/>

        </classes>
    </test>
</suite>